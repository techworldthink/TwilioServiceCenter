# Production Settings
DEBUG=0
SECRET_KEY=change_me_to_a_secure_random_string_in_production
ALLOWED_HOSTS=localhost,127.0.0.1,your-domain.com

# Database Settings (Matches docker-compose.prod.yml)
DB_ENGINE=django.db.backends.mysql
DB_NAME=twilio_relay
DB_USER=relay_user
DB_PASSWORD=secure_relay_password
DB_HOST=db
DB_PORT=3306 
# Note: Host is 'db' (service name) and internal port is 3306. 
# External port 3307 is for host access only.

# Redis
REDIS_URL=redis://redis:6379/1

# Encryption Key (MUST be 32 bytes url-safe base64)
# Generate using: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
MASTER_ENCRYPTION_KEY=change_this_to_generated_key

# Twilio (Optional defaults if needed)
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
